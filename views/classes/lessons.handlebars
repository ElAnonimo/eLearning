<h2>{{class.title}}'s classes</h2>
<table cellspacing="0" cellpadding="0">
	<thead><tr><th>Lesson number</th><th>Lesson title</th><th></th></tr></thead>
	<tbody>
		{{#each class.lessons}}
			<tr>
				<td>{{lesson_number}}</td>
				<td>{{lesson_title}}</td>
				<td><a href="/classes/{{../class._id}}/lessons/{{lesson_number}}">View this lesson</a></td>
			</tr>
		{{/each}}
	</tbody>
</table>

<!-- "../class._id": we need ../ to go back from the loop -->